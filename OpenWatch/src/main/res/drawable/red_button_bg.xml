<?xml version="1.0" encoding="utf-8"?>
<!-- Thanks! http://android.onyou.ch/2011/01/25/simple-custom-button-using-a-selector-xml-layout/ -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- disabled -->
    <item android:state_enabled="false"><shape>
        <gradient android:angle="270" android:endColor="#c1cdc3" android:startColor="#d6e2d8" />
        <stroke android:color="#ba2724" android:width="1dp"/>
        <corners android:radius="8dp" />
    </shape></item>

    <!-- pressed -->
    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="#ed635f" android:startColor="#cd3b36" />
            <stroke android:color="#ba2724" android:width="1dp"/>
            <corners android:radius="8dp" />
    </shape></item>

    <!-- focused -->
    <item android:state_focused="true"><shape>
        <gradient android:angle="270" android:endColor="#ed635f" android:startColor="#cd3b36" />
        <stroke android:color="#ba2724" android:width="1dp"/>
        <corners android:radius="8dp" />
    </shape></item>

    <!-- default -->
    <item><shape>
        <gradient android:angle="270" android:endColor="#cd3b36" android:startColor="#ed635f" />
        <stroke android:color="#ba2724" android:width="1dp"/>
        <corners android:radius="8dp" />
    </shape></item>

</selector>