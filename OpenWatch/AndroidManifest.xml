<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.openwatch.reporter"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="com.example.monitoringsensors.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name="net.openwatch.reporter.OWApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <provider
            android:name="net.openwatch.reporter.contentprovider.OWContentProvider"
            android:authorities="net.openwatch.reporter.contentprovider.OWContentProvider"
            android:exported="false" >
        </provider>

        <activity
            android:name="net.openwatch.reporter.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="net.openwatch.reporter.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.openwatch.reporter.RecorderActivity"
            android:keepScreenOn="true"
            android:label="@string/title_activity_recorder"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="net.openwatch.reporter.FeedActivity"
            android:label="@string/title_activity_feed" >
        </activity>
        <activity
            android:name="net.openwatch.reporter.LocalRecordingViewActivity"
            android:configChanges="keyboardHidden"
            android:label="@string/title_activity_local_recording_view" >
        </activity>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyD78e1qxX4_dB6w74tmykGJRECO-ucNQNY" >
        </meta-data>

        <activity
            android:name="net.openwatch.reporter.WhatHappenedActivity"
            android:label="@string/title_activity_what_happened" >
        </activity>
    </application>

</manifest>