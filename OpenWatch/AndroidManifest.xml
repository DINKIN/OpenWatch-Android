<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.openwatch.reporter"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="com.example.monitoringsensors.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name="net.openwatch.reporter.OWApplication"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/ic_ab_icon"
        android:theme="@style/Theme.openwatch" >
        <provider
            android:name="net.openwatch.reporter.contentprovider.OWContentProvider"
            android:authorities="net.openwatch.reporter.contentprovider.OWContentProvider"
            android:exported="false" >
        </provider>

        <activity
            android:name="net.openwatch.reporter.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name=".LoginActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.openwatch.reporter.MainActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.openwatch.reporter.RecorderActivity"
            android:keepScreenOn="true"
            android:screenOrientation="landscape" >
        </activity>
        <activity android:name="net.openwatch.reporter.FeedFragmentActivity" >
        </activity>
        <activity
            android:name="net.openwatch.reporter.OWMediaObjectViewActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan" >
        </activity>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyD78e1qxX4_dB6w74tmykGJRECO-ucNQNY" >
        </meta-data>

        <activity
            android:name="net.openwatch.reporter.WhatHappenedActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" >
        </activity>
        <activity
            android:name="net.openwatch.reporter.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="net.openwatch.reporter.OWStoryViewActivity"
            android:label="@string/title_activity_story_view"
            android:parentActivityName="net.openwatch.reporter.FeedFragmentActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.openwatch.reporter.FeedFragmentActivity" />
        </activity>
        <activity
            android:name="net.openwatch.reporter.WelcomeActivity"
            android:label="@string/title_activity_welcome" >
        </activity>
        <activity
            android:name="net.openwatch.reporter.OWPhotoReviewActivity"
            android:label="@string/title_activity_picture_review"
            android:parentActivityName="net.openwatch.reporter.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.openwatch.reporter.MainActivity" />
        </activity>
        <activity
            android:name="net.openwatch.reporter.OWInvestigationViewActivity"
            android:label="@string/title_activity_owinvestigation_view" >
        </activity>
    </application>

</manifest>