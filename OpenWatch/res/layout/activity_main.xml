<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:weightSum="1.0"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:layout_weight=".35"
        android:clickable="true"
        android:gravity="center" >

        <Button
            android:id="@+id/button_record"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/record"
            android:drawablePadding="-10dp"
            android:onClick="recordButtonClick"
            android:text="@string/record_button_text"
            android:textColor="#000000"
            android:textSize="30sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".65"
        android:gravity="center" >

        <Button
            android:id="@+id/button_saved"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/saved"
            android:onClick="savedButtonClick"
            android:text="@string/saved_recordings_button_text"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_local"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:layout_toRightOf="@id/button_saved"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/local"
            android:onClick="localButtonClick"
            android:text="@string/local_button_text"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_watch"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/button_saved"
            android:layout_margin="20dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/eye"
            android:onClick="watchButtonClick"
            android:text="@string/watch_button_text"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_settings"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/button_local"
            android:layout_toRightOf="@id/button_watch"
            android:layout_margin="20dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/settings"
            android:onClick="settingsButtonClick"
            android:text="@string/settings_button_text"
            android:textColor="#000000"
            android:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>