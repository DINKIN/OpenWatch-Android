<?xml version="1.0" encoding="utf-8"?>
<!-- Thanks! http://android.onyou.ch/2011/01/25/simple-custom-button-using-a-selector-xml-layout/ -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- disabled -->
    <item android:state_enabled="false"><shape>
            <stroke android:width="1px" android:color="#444" />

            <corners android:radius="18dp" />

            <gradient android:angle="270" android:endColor="#707070" android:startColor="#969696" />

            <corners android:radius="18dp" />
        </shape></item>
    
    <!-- pressed -->
    <item android:state_pressed="true"><shape>
            <stroke android:width="1px" android:color="#444" />

            <corners android:radius="18dp" />

            <gradient android:angle="270" android:endColor="#000000" android:startColor="#525252" />

            <corners android:radius="18dp" />
        </shape></item>

    <!-- focused -->
    <item android:state_focused="true"><shape>
            <stroke android:width="1px" android:color="#444" />

            <corners android:radius="18dp" />

            <gradient android:angle="270" android:endColor="#000000" android:startColor="#525252" />

            <corners android:radius="18dp" />
        </shape></item>

    <!-- default -->
    <item><shape>
            <gradient android:angle="270" android:endColor="#292828" android:startColor="#7A7A7A" />

            <stroke android:width="1px" android:color="#444" />

            <corners android:radius="18dp" />
        </shape></item>

</selector>