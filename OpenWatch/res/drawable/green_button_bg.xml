<?xml version="1.0" encoding="utf-8"?>
<!-- Thanks! http://android.onyou.ch/2011/01/25/simple-custom-button-using-a-selector-xml-layout/ -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- disabled -->
    <item android:state_enabled="false"><shape>

            <gradient android:angle="270" android:endColor="#c1cdc3" android:startColor="#d6e2d8" />

            <corners android:radius="8dp" />
        </shape></item>

    <!-- pressed -->
    <!-- pressed -->
    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="#57bd68" android:startColor="#65d878" />

            <corners android:radius="8dp" />
        </shape></item>

    <!-- focused -->
    <item android:state_focused="true"><shape>
             <gradient android:angle="270" android:endColor="#57bd68" android:startColor="#65d878" />

            <corners android:radius="8dp" />
        </shape></item>

    <!-- default -->
    <item><shape>
             <gradient android:angle="270" android:endColor="#65d878" android:startColor="#71f086" />

            <corners android:radius="8dp" />
        </shape></item>

</selector>