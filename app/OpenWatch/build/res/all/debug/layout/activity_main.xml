<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:animateLayoutChanges="true"
              android:ignoreGravity="@+id/progress_header_container"
              tools:context=".MainActivity" >


    <include layout="@layout/progress_header"
            android:id="@+id/progress_header_container"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

    <Button
            android:id="@+id/button_mission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progress_header_container"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/mission_button"
            android:layout_marginTop="0dp"
            android:drawablePadding="10dp"
            android:onClick="missionButtonClick"
            android:text="@string/mission_button_text"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_camcorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_mission"
            android:background="@android:color/transparent"
            android:layout_alignLeft="@id/button_mission"
            android:drawableLeft="@drawable/camcorder_button"
            android:layout_marginTop="15dp"
            android:drawablePadding="10dp"
            android:onClick="camcorderButtonClick"
            android:text="@string/video_button_text"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />



        <Button
            android:id="@+id/button_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/button_camcorder"
            android:layout_below="@id/button_camcorder"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/camera_button"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="cameraButtonClick"
            android:text="@string/photo_button_text"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_featured"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_camera"
            android:layout_alignLeft="@id/button_camcorder"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/watch_button"
            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:onClick="featuredButtonClick"
            android:text="@string/top_stories_button_text"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/button_camcorder"
            android:layout_below="@id/button_featured"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/local_button"
            android:drawablePadding="10dp"
            android:onClick="localButtonClick"
            android:text="@string/local_button_text"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_saved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/button_camcorder"
            android:layout_below="@id/button_local"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/saved_button"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="savedButtonClick"
            android:text="@string/saved_media_button_text"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/button_camcorder"
            android:layout_below="@id/button_saved"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/heart_button"
            android:drawablePadding="10dp"
            android:onClick="feedbackButtonClick"
            android:text="@string/feedback_button_text"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/button_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/button_camcorder"
            android:layout_below="@id/button_feedback"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/settings_button"
            android:drawablePadding="10dp"
            android:onClick="settingsButtonClick"
            android:text="@string/settings_button_text"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />


</RelativeLayout><!-- From: file:/Users/davidbrodsky/Code/android/OpenWatch-Android2/OpenWatch-Android/app/OpenWatch/res/layout/activity_main.xml -->