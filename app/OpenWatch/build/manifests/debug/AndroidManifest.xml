<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="16" android:versionName="2.4" package="org.ale.openwatch">

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="18"/>

    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
    <uses-permission android:name="org.ale.openwatch.permission.MAPS_RECEIVE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <!-- GCM specific -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <permission android:name="org.ale.openwatch.permission.C2D_MESSAGE" android:protectionLevel="signature"/>
    <uses-permission android:name="org.ale.openwatch.permission.C2D_MESSAGE"/>

    <uses-feature android:name="android.hardware.camera" android:required="false"/>
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false"/>
    <uses-feature android:name="android.hardware.camera.front" android:required="false"/>


    <uses-feature android:glEsVersion="0x00020000" android:required="true"/>

    <application android:debuggable="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:logo="@drawable/ic_ab_icon" android:name="org.ale.openwatch.OWApplication" android:theme="@style/Theme.openwatch">
        <receiver android:exported="true" android:name="org.ale.openwatch.gcm.OWGcmBroadcastReceiver" android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
                <category android:name="org.ale.openwatch"/>
            </intent-filter>
        </receiver>
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/fb_app_id"/>

        <provider android:authorities="org.ale.openwatch.contentprovider.OWContentProvider" android:exported="false" android:name="org.ale.openwatch.contentprovider.OWContentProvider">
        </provider>

        <activity android:label="" android:name="org.ale.openwatch.LoginActivity" android:windowSoftInputMode="adjustResize|stateVisible">
            <intent-filter>
                <action android:name=".LoginActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name="org.ale.openwatch.MainActivity" android:screenOrientation="portrait">
        </activity>
        <activity android:keepScreenOn="true" android:name="org.ale.openwatch.RecorderActivity" android:screenOrientation="landscape">
        </activity>
        <activity android:launchMode="singleTask" android:name="org.ale.openwatch.FeedFragmentActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <data android:scheme="http"/>
                <data android:scheme="https"/>
                <data android:scheme="openwatch"/>
                <data android:host="www.openwatch.net"/>
                <data android:host="openwatch.net" android:pathPrefix="/w"/>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:label="" android:name="org.ale.openwatch.OWMediaObjectViewActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden|adjustPan">
        </activity>

        <meta-data android:name="com.google.android.maps.v2.API_KEY" android:value="AIzaSyD78e1qxX4_dB6w74tmykGJRECO-ucNQNY">
        </meta-data>

        <activity android:name="org.ale.openwatch.WhatHappenedActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden|adjustPan">
        </activity>
        <activity android:label="@string/title_activity_settings" android:name="org.ale.openwatch.SettingsActivity" android:parentActivityName="org.ale.openwatch.FeedFragmentActivity">
        </activity>
        <activity android:label="@string/title_activity_picture_review" android:name="org.ale.openwatch.OWPhotoReviewActivity" android:parentActivityName="org.ale.openwatch.MainActivity" android:screenOrientation="portrait" android:windowSoftInputMode="adjustPan">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="org.ale.openwatch.MainActivity"/>
        </activity>
        <activity android:label="" android:name="org.ale.openwatch.OWInvestigationViewActivity" android:parentActivityName="org.ale.openwatch.FeedFragmentActivity" android:screenOrientation="portrait">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="org.ale.openwatch.FeedFragmentActivity"/>
        </activity>
        <activity android:name="org.ale.openwatch.FancyLoginActivity"/>
        <activity android:name="org.ale.openwatch.OnBoardingActivity"/>
        <activity android:name="org.ale.openwatch.OWMissionViewActivity" android:parentActivityName="org.ale.openwatch.FeedFragmentActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="org.ale.openwatch.FeedFragmentActivity"/>
        </activity>
        <activity android:name="org.ale.openwatch.MapActivity"/>
        <activity android:label="@string/app_name" android:name="com.facebook.LoginActivity" android:theme="@android:style/Theme.Translucent.NoTitleBar"/>
        <activity android:name="org.ale.openwatch.WebViewActivity"/>
        <activity android:label="@string/profile" android:name="org.ale.openwatch.OWProfileActivity" android:screenOrientation="portrait">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="org.ale.openwatch.FeedFragmentActivity"/>
        </activity>
        <activity android:name="org.ale.openwatch.GCMMissionActivity"/>
        <activity android:label="@string/app_name" android:name="com.orm.androrm.impl.ORMTest">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
